<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.PatientFormController"
      alignment="CENTER" spacing="15" styleClass="form-container">

    <Label text="Add New Patient" styleClass="form-title"/>

    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="surnameField" promptText="Surname"/>
    <TextField fx:id="dobField" promptText="Date of Birth (YYYY-MM-DD)"/>
    <TextArea fx:id="historyField" promptText="Medical History" prefRowCount="4"/>

    <Button text="Save Patient" onAction="#handleSave" styleClass="form-button"/>

</VBox>
